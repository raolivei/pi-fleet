# ============================================
# PERSONAL WORKSPACE ROOT (raolivei)
# ============================================
# This applies to ALL personal projects under ~/WORKSPACE/raolivei/

export WORKSPACE_TYPE="personal"
export PERSONAL_PROJECT=true

# Ensure we use local Python, not corporate
export PATH="$HOME/.local/bin:/usr/local/bin:$PATH"

# Disable pyenv for personal work - use system Python + local venvs
unset PYENV_VERSION

# Clear any corporate environment variables
unset COMPANY

echo "üè† Personal workspace (raolivei) activated - ready for project venvs"
