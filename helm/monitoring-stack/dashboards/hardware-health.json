{
  "title": "Hardware Health",
  "uid": "hardware-health",
  "tags": ["pi-fleet", "eldertree", "hardware", "raspberry-pi"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "Raspberry Pi Thermal Status",
      "type": "row",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0},
      "collapsed": false
    },
    {
      "id": 2,
      "title": "Node Temperature",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 1},
      "targets": [{
        "expr": "node_hwmon_temp_celsius",
        "legendFormat": "{{instance}} ({{chip}})"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "orange", "value": 60},
              {"color": "red", "value": 75}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "CPU Frequency",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 1},
      "targets": [{
        "expr": "node_cpu_frequency_hertz",
        "legendFormat": "{{instance}} CPU {{cpu}}"
      }],
      "fieldConfig": {
        "defaults": {"unit": "hertz"}
      }
    },
    {
      "id": 4,
      "title": "System Load & Resources",
      "type": "row",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 9},
      "collapsed": false
    },
    {
      "id": 5,
      "title": "System Load Average",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 10},
      "targets": [
        {
          "expr": "node_load1",
          "legendFormat": "{{instance}} (1m)"
        },
        {
          "expr": "node_load5",
          "legendFormat": "{{instance}} (5m)"
        },
        {
          "expr": "node_load15",
          "legendFormat": "{{instance}} (15m)"
        }
      ]
    },
    {
      "id": 6,
      "title": "Memory Availability",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 10},
      "targets": [{
        "expr": "node_memory_MemAvailable_bytes",
        "legendFormat": "{{instance}}"
      }],
      "fieldConfig": {
        "defaults": {"unit": "bytes"}
      }
    },
    {
      "id": 7,
      "title": "Disk & I/O",
      "type": "row",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 18},
      "collapsed": false
    },
    {
      "id": 8,
      "title": "Disk Usage (%)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 19},
      "targets": [{
        "expr": "(node_filesystem_size_bytes - node_filesystem_avail_bytes) / node_filesystem_size_bytes * 100",
        "legendFormat": "{{instance}} ({{mountpoint}})"
      }],
      "fieldConfig": {
        "defaults": {"unit": "percent"}
      }
    },
    {
      "id": 9,
      "title": "Disk I/O (Read/Write)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 19},
      "targets": [
        {
          "expr": "rate(node_disk_read_bytes_total[5m])",
          "legendFormat": "{{instance}} (Read)"
        },
        {
          "expr": "rate(node_disk_written_bytes_total[5m])",
          "legendFormat": "{{instance}} (Write)"
        }
      ],
      "fieldConfig": {
        "defaults": {"unit": "Bps"}
      }
    }
  ],
  "time": {"from": "now-1h", "to": "now"},
  "timepicker": {"refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]},
  "templating": {
    "list": [
      {
        "name": "instance",
        "type": "query",
        "query": "label_values(node_hwmon_temp_celsius, instance)",
        "refresh": 1,
        "multi": true,
        "includeAll": true
      }
    ]
  },
  "annotations": {"list": []},
  "links": []
}

