{
  "title": "Ollie AI Assistant",
  "uid": "ollie-dashboard",
  "tags": ["eldertree", "ollie", "ai", "llm", "applications"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "editable": true,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "row",
      "title": "Service Health",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Core API",
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 1 },
      "targets": [
        {
          "expr": "count(kube_pod_status_phase{namespace=\"ollie\", pod=~\"ollie-core-.*\", phase=\"Running\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "mappings": [
            { "type": "value", "options": { "1": { "color": "green", "text": "UP" } } },
            { "type": "special", "options": { "match": "null", "result": { "color": "red", "text": "DOWN" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Ollama LLM",
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 1 },
      "targets": [
        {
          "expr": "count(kube_pod_status_phase{namespace=\"ollie\", pod=~\"ollie-ollama-.*\", phase=\"Running\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "mappings": [
            { "type": "value", "options": { "1": { "color": "green", "text": "UP" } } },
            { "type": "special", "options": { "match": "null", "result": { "color": "red", "text": "DOWN" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "TTS",
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 1 },
      "targets": [
        {
          "expr": "count(kube_pod_status_phase{namespace=\"ollie\", pod=~\"ollie-tts-.*\", phase=\"Running\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "mappings": [
            { "type": "value", "options": { "1": { "color": "green", "text": "UP" } } },
            { "type": "special", "options": { "match": "null", "result": { "color": "red", "text": "DOWN" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "id": 5,
      "type": "stat",
      "title": "Whisper STT",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 1 },
      "targets": [
        {
          "expr": "count(kube_pod_status_phase{namespace=\"ollie\", pod=~\"ollie-whisper-.*\", phase=\"Running\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "mappings": [
            { "type": "value", "options": { "1": { "color": "green", "text": "UP" } } },
            { "type": "special", "options": { "match": "null", "result": { "color": "red", "text": "DOWN" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "id": 6,
      "type": "stat",
      "title": "UI",
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 1 },
      "targets": [
        {
          "expr": "count(kube_pod_status_phase{namespace=\"ollie\", pod=~\"ollie-ui-.*\", phase=\"Running\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "mappings": [
            { "type": "value", "options": { "1": { "color": "green", "text": "UP" } } },
            { "type": "special", "options": { "match": "null", "result": { "color": "red", "text": "DOWN" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "id": 7,
      "type": "stat",
      "title": "Restarts (1h)",
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 1 },
      "targets": [
        {
          "expr": "sum(increase(kube_pod_container_status_restarts_total{namespace=\"ollie\"}[1h]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "id": 8,
      "type": "row",
      "title": "Resource Usage",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "collapsed": false
    },
    {
      "id": 9,
      "type": "timeseries",
      "title": "CPU Usage by Service",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"ollie\", container!=\"\", container!=\"POD\"}[5m])) by (pod)",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 20,
            "gradientMode": "scheme",
            "lineInterpolation": "smooth"
          }
        }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "right", "showLegend": true },
        "tooltip": { "mode": "multi", "sort": "desc" }
      }
    },
    {
      "id": 10,
      "type": "timeseries",
      "title": "Memory Usage by Service",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "targets": [
        {
          "expr": "sum(container_memory_working_set_bytes{namespace=\"ollie\", container!=\"\", container!=\"POD\"}) by (pod)",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "bytes",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 20,
            "gradientMode": "scheme",
            "lineInterpolation": "smooth"
          }
        }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "right", "showLegend": true },
        "tooltip": { "mode": "multi", "sort": "desc" }
      }
    },
    {
      "id": 11,
      "type": "row",
      "title": "LLM Service (Ollama)",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
      "collapsed": false
    },
    {
      "id": 12,
      "type": "stat",
      "title": "Ollama Memory",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 15 },
      "targets": [
        {
          "expr": "sum(container_memory_working_set_bytes{namespace=\"ollie\", pod=~\"ollie-ollama-.*\", container!=\"POD\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed", "fixedColor": "purple" },
          "unit": "bytes"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "id": 13,
      "type": "stat",
      "title": "Ollama CPU",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 15 },
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"ollie\", pod=~\"ollie-ollama-.*\", container!=\"POD\"}[5m])) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed", "fixedColor": "blue" },
          "unit": "percent"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "id": 14,
      "type": "timeseries",
      "title": "Ollama Resource Usage Over Time",
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 15 },
      "targets": [
        {
          "expr": "sum(container_memory_working_set_bytes{namespace=\"ollie\", pod=~\"ollie-ollama-.*\", container!=\"POD\"})",
          "legendFormat": "Memory",
          "refId": "A"
        },
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"ollie\", pod=~\"ollie-ollama-.*\", container!=\"POD\"}[5m])) * 1e9",
          "legendFormat": "CPU (scaled)",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "lineInterpolation": "smooth"
          }
        }
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "multi" }
      }
    },
    {
      "id": 15,
      "type": "row",
      "title": "Storage",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 21 },
      "collapsed": false
    },
    {
      "id": 16,
      "type": "gauge",
      "title": "Data PVC Usage",
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 22 },
      "targets": [
        {
          "expr": "kubelet_volume_stats_used_bytes{namespace=\"ollie\"} / kubelet_volume_stats_capacity_bytes{namespace=\"ollie\"} * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "showThresholdMarkers": true
      }
    },
    {
      "id": 17,
      "type": "timeseries",
      "title": "PVC Usage Over Time",
      "gridPos": { "h": 6, "w": 16, "x": 8, "y": 22 },
      "targets": [
        {
          "expr": "kubelet_volume_stats_used_bytes{namespace=\"ollie\"}",
          "legendFormat": "{{persistentvolumeclaim}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "bytes",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 20,
            "gradientMode": "scheme",
            "lineInterpolation": "smooth"
          }
        }
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "multi" }
      }
    }
  ]
}
