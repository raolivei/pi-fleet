{
  "title": "US Law Severity Map Dashboard",
  "uid": "us-law-severity-map-dashboard",
  "tags": ["us-law-severity-map", "applications", "monitoring"],
  "timezone": "",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "Web Request Rate",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [{
        "expr": "sum(rate(traefik_service_requests_total{namespace=\"us-law-severity-map\", service=\"us-law-severity-map-web-service\"}[5m])) by (code)",
        "legendFormat": "HTTP {{code}}"
      }]
    },
    {
      "id": 2,
      "title": "Web Response Time (p95)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [{
        "expr": "histogram_quantile(0.95, sum(rate(traefik_service_request_duration_seconds_bucket{namespace=\"us-law-severity-map\", service=\"us-law-severity-map-web-service\"}[5m])) by (le))",
        "legendFormat": "p95"
      }]
    },
    {
      "id": 3,
      "title": "Pod Status",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8},
      "targets": [{
        "expr": "count(kube_pod_status_phase{namespace=\"us-law-severity-map\", phase=\"Running\"})",
        "legendFormat": "Running Pods"
      }],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {"options": {"0": {"color": "red", "text": "Down"}, "1": {"color": "green", "text": "Running"}}, "type": "value"}
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [{"color": "red", "value": null}, {"color": "green", "value": 1}]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "textMode": "value_and_name"
      }
    },
    {
      "id": 4,
      "title": "Restarts (Last Hour)",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 8},
      "targets": [{
        "expr": "sum(increase(kube_pod_container_status_restarts_total{namespace=\"us-law-severity-map\"}[1h]))",
        "legendFormat": "Restarts"
      }],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [{"color": "green", "value": null}, {"color": "yellow", "value": 1}, {"color": "red", "value": 5}]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "center",
        "textMode": "value"
      }
    },
    {
      "id": 5,
      "title": "5xx Error Rate",
      "type": "timeseries",
      "gridPos": {"h": 4, "w": 12, "x": 12, "y": 8},
      "targets": [{
        "expr": "sum(rate(traefik_service_requests_total{namespace=\"us-law-severity-map\", code=~\"5..\"}[5m]))",
        "legendFormat": "5xx Errors/sec"
      }],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [{"color": "green", "value": null}, {"color": "red", "value": 0.1}]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "CPU Usage by Pod",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
      "targets": [{
        "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"us-law-severity-map\", container!=\"\", container!=\"POD\"}[5m])) by (pod)",
        "legendFormat": "{{pod}}"
      }]
    },
    {
      "id": 7,
      "title": "Memory Usage by Pod",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
      "targets": [{
        "expr": "sum(container_memory_working_set_bytes{namespace=\"us-law-severity-map\", container!=\"\", container!=\"POD\"}) by (pod)",
        "legendFormat": "{{pod}}"
      }]
    }
  ],
  "time": {"from": "now-1h", "to": "now"},
  "timepicker": {"refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]},
  "templating": {"list": []},
  "annotations": {"list": []},
  "links": [{"title": "Back to Applications Overview", "url": "/d/applications-overview"}]
}
