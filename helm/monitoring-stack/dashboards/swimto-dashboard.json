{
  "title": "SwimTO Application Dashboard",
  "uid": "swimto-dashboard",
  "tags": ["swimto", "applications", "monitoring"],
  "timezone": "",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "API Request Rate",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [{
        "expr": "sum(rate(traefik_service_requests_total{namespace=\"swimto\", service=\"swimto-api-service\"}[5m])) by (code)",
        "legendFormat": "HTTP {{code}}"
      }]
    },
    {
      "id": 2,
      "title": "API Response Time (p95)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [{
        "expr": "histogram_quantile(0.95, sum(rate(traefik_service_request_duration_seconds_bucket{namespace=\"swimto\", service=\"swimto-api-service\"}[5m])) by (le))",
        "legendFormat": "p95"
      }]
    },
    {
      "id": 3,
      "title": "Web Request Rate",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [{
        "expr": "sum(rate(traefik_service_requests_total{namespace=\"swimto\", service=\"swimto-web-service\"}[5m])) by (code)",
        "legendFormat": "HTTP {{code}}"
      }]
    },
    {
      "id": 4,
      "title": "Pod Status (Web/API)",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
      "targets": [{
        "expr": "count(kube_pod_status_phase{namespace=\"swimto\", phase=\"Running\", pod=~\"swimto-(web|api)-.*\"})",
        "legendFormat": "Running Pods"
      }]
    },
    {
      "id": 5,
      "title": "PostgreSQL Status",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 8},
      "targets": [{
        "expr": "count(kube_pod_status_phase{namespace=\"swimto\", pod=~\"swimto-postgres-.*\", phase=\"Running\"})",
        "legendFormat": "DB Status"
      }]
    },
    {
      "id": 6,
      "title": "Redis Status",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 12},
      "targets": [{
        "expr": "count(kube_pod_status_phase{namespace=\"swimto\", pod=~\"swimto-redis-.*\", phase=\"Running\"})",
        "legendFormat": "Redis Status"
      }]
    },
    {
      "id": 7,
      "title": "CPU Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "targets": [{
        "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"swimto\", container!=\"\", container!=\"POD\"}[5m])) by (pod)",
        "legendFormat": "{{pod}}"
      }]
    },
    {
      "id": 8,
      "title": "Memory Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "targets": [{
        "expr": "sum(container_memory_working_set_bytes{namespace=\"swimto\", container!=\"\", container!=\"POD\"}) by (pod)",
        "legendFormat": "{{pod}}"
      }]
    }
  ],
  "time": {"from": "now-1h", "to": "now"},
  "timepicker": {"refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]},
  "templating": {"list": []},
  "annotations": {"list": []},
  "links": []
}

