{
  "title": "Nima Application Dashboard",
  "uid": "nima-dashboard",
  "tags": ["nima", "applications", "monitoring", "ml"],
  "timezone": "",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "API Request Rate",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [{
        "expr": "sum(rate(traefik_service_requests_total{namespace=\"nima\", service=\"nima-api\"}[5m])) by (code)",
        "legendFormat": "HTTP {{code}}"
      }]
    },
    {
      "id": 2,
      "title": "API Response Time (p95)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [{
        "expr": "histogram_quantile(0.95, sum(rate(traefik_service_request_duration_seconds_bucket{namespace=\"nima\", service=\"nima-api\"}[5m])) by (le))",
        "legendFormat": "p95"
      }]
    },
    {
      "id": 3,
      "title": "Current Replicas (Scale-to-Zero)",
      "type": "gauge",
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 8},
      "targets": [{
        "expr": "count(kube_pod_status_phase{namespace=\"nima\", pod=~\"nima-api-.*\", phase=\"Running\"})",
        "legendFormat": "Active Replicas"
      }],
      "options": {
        "orientation": "auto",
        "reduceOptions": {"calcs": ["lastNotNull"]},
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "blue", "value": 0},
              {"color": "green", "value": 1},
              {"color": "yellow", "value": 3},
              {"color": "red", "value": 5}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Restarts (Last Hour)",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 8},
      "targets": [{
        "expr": "sum(increase(kube_pod_container_status_restarts_total{namespace=\"nima\"}[1h]))",
        "legendFormat": "Restarts"
      }]
    },
    {
      "id": 5,
      "title": "5xx Error Rate",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 12},
      "targets": [{
        "expr": "sum(rate(traefik_service_requests_total{namespace=\"nima\", code=~\"5..\"}[5m]))",
        "legendFormat": "Errors/sec"
      }]
    },
    {
      "id": 6,
      "title": "CPU Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [{
        "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"nima\", container!=\"\", container!=\"POD\"}[5m])) by (pod)",
        "legendFormat": "{{pod}}"
      }]
    },
    {
      "id": 7,
      "title": "Memory Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "targets": [{
        "expr": "sum(container_memory_working_set_bytes{namespace=\"nima\", container!=\"\", container!=\"POD\"}) by (pod)",
        "legendFormat": "{{pod}}"
      }]
    },
    {
      "id": 8,
      "title": "KEDA Scaling Metric",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "targets": [{
        "expr": "sum(rate(traefik_service_requests_total{service=\"nima-api\", namespace=\"nima\"}[2m]))",
        "legendFormat": "Requests/sec (KEDA trigger)"
      }],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "thresholdsStyle": {"mode": "line"}
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 2}
            ]
          }
        }
      }
    }
  ],
  "time": {"from": "now-1h", "to": "now"},
  "timepicker": {"refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]},
  "templating": {"list": []},
  "annotations": {"list": []},
  "links": [{"title": "Back to Applications Overview", "url": "/d/applications-overview"}]
}
