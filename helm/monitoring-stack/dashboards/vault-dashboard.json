{
  "title": "Vault Operations",
  "uid": "vault-ops",
  "tags": ["vault", "secrets", "applications"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "type": "row",
      "title": "Cluster Health",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "id": 2,
      "title": "Vault Sealed",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 1 },
      "targets": [
        {
          "expr": "vault_core_unsealed",
          "legendFormat": "Unsealed",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "SEALED", "color": "red" } } },
            { "type": "value", "options": { "1": { "text": "UNSEALED", "color": "green" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none"
      }
    },
    {
      "id": 3,
      "title": "HA Mode",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 1 },
      "targets": [
        {
          "expr": "vault_core_active",
          "legendFormat": "Active",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "STANDBY", "color": "blue" } } },
            { "type": "value", "options": { "1": { "text": "ACTIVE", "color": "green" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none"
      }
    },
    {
      "id": 4,
      "title": "Initialized",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 1 },
      "targets": [
        {
          "expr": "vault_core_initialized",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "NO", "color": "red" } } },
            { "type": "value", "options": { "1": { "text": "YES", "color": "green" } } }
          ]
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none"
      }
    },
    {
      "id": 5,
      "title": "Raft Peers",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 1 },
      "targets": [
        {
          "expr": "vault_raft_peers",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 2 },
              { "color": "green", "value": 3 }
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none"
      }
    },
    {
      "id": 6,
      "title": "Raft Commit Time",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 1 },
      "targets": [
        {
          "expr": "vault_raft_commitTime{quantile=\"0.99\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 100 }
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "id": 7,
      "title": "Uptime",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 1 },
      "targets": [
        {
          "expr": "time() - process_start_time_seconds{job=\"vault\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none"
      }
    },
    {
      "id": 10,
      "type": "row",
      "title": "Token & Lease Activity",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "collapsed": false
    },
    {
      "id": 11,
      "title": "Token Count",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 6 },
      "targets": [
        {
          "expr": "vault_token_count",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null }
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "id": 12,
      "title": "Lease Count",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 6 },
      "targets": [
        {
          "expr": "vault_expire_num_leases",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "red", "value": 500 }
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "id": 13,
      "title": "Token Creations (5m rate)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "targets": [
        {
          "expr": "rate(vault_token_create_count[5m])",
          "legendFormat": "Token Creates",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineInterpolation": "smooth"
          }
        }
      }
    },
    {
      "id": 20,
      "type": "row",
      "title": "Request Metrics",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
      "collapsed": false
    },
    {
      "id": 21,
      "title": "Request Rate (5m)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 15 },
      "targets": [
        {
          "expr": "sum(rate(vault_route_create_count[5m]))",
          "legendFormat": "Create",
          "refId": "A"
        },
        {
          "expr": "sum(rate(vault_route_read_count[5m]))",
          "legendFormat": "Read",
          "refId": "B"
        },
        {
          "expr": "sum(rate(vault_route_delete_count[5m]))",
          "legendFormat": "Delete",
          "refId": "C"
        },
        {
          "expr": "sum(rate(vault_route_list_count[5m]))",
          "legendFormat": "List",
          "refId": "D"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineInterpolation": "smooth",
            "stacking": { "mode": "normal" }
          },
          "unit": "reqps"
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right"
        }
      }
    },
    {
      "id": 22,
      "title": "Request Latency (p99)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 15 },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(vault_route_create_bucket[5m])) by (le))",
          "legendFormat": "Create p99",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(vault_route_read_bucket[5m])) by (le))",
          "legendFormat": "Read p99",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineInterpolation": "smooth"
          },
          "unit": "ms"
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right"
        }
      }
    },
    {
      "id": 30,
      "type": "row",
      "title": "Resources",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 23 },
      "collapsed": false
    },
    {
      "id": 31,
      "title": "Memory Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=\"vault\"}",
          "legendFormat": "RSS Memory",
          "refId": "A"
        },
        {
          "expr": "go_memstats_heap_inuse_bytes{job=\"vault\"}",
          "legendFormat": "Heap In Use",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineInterpolation": "smooth"
          },
          "unit": "bytes"
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right"
        }
      }
    },
    {
      "id": 32,
      "title": "Goroutines",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "targets": [
        {
          "expr": "go_goroutines{job=\"vault\"}",
          "legendFormat": "Goroutines",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineInterpolation": "smooth"
          }
        }
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {},
  "templating": { "list": [] },
  "annotations": { "list": [] },
  "links": []
}
