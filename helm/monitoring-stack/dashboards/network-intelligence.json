{
  "title": "Network Intelligence",
  "uid": "network-intelligence",
  "tags": ["eldertree", "network", "traffic", "traefik"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "editable": true,
  "time": { "from": "now-3h", "to": "now" },
  "panels": [
    {
      "id": 1,
      "type": "row",
      "title": "ðŸ“Š TRAFFIC OVERVIEW",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Total Requests/s",
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 1 },
      "targets": [
        { "expr": "sum(rate(traefik_entrypoint_requests_total[5m]))", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps", "decimals": 1, "color": { "mode": "fixed", "fixedColor": "blue" } } },
      "options": { "colorMode": "value", "graphMode": "area" }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Success Rate",
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 1 },
      "targets": [
        { "expr": "(1 - (sum(rate(traefik_entrypoint_requests_total{code=~\"5..\"}[5m])) / sum(rate(traefik_entrypoint_requests_total[5m])))) * 100", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent", "decimals": 2,
          "color": { "mode": "thresholds" },
          "thresholds": { "steps": [{ "color": "red", "value": null }, { "color": "yellow", "value": 95 }, { "color": "green", "value": 99 }] }
        }
      },
      "options": { "colorMode": "background", "graphMode": "none" }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "5xx Errors/s",
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 1 },
      "targets": [
        { "expr": "sum(rate(traefik_entrypoint_requests_total{code=~\"5..\"}[5m])) or vector(0)", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps", "decimals": 3,
          "color": { "mode": "thresholds" },
          "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 0.01 }, { "color": "red", "value": 0.1 }] }
        }
      },
      "options": { "colorMode": "background", "graphMode": "area" }
    },
    {
      "id": 5,
      "type": "stat",
      "title": "4xx Errors/s",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 1 },
      "targets": [
        { "expr": "sum(rate(traefik_entrypoint_requests_total{code=~\"4..\"}[5m])) or vector(0)", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps", "decimals": 3,
          "color": { "mode": "thresholds" },
          "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 1 }, { "color": "red", "value": 10 }] }
        }
      },
      "options": { "colorMode": "background", "graphMode": "area" }
    },
    {
      "id": 6,
      "type": "stat",
      "title": "Active Connections",
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 1 },
      "targets": [
        { "expr": "sum(traefik_open_connections)", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "color": { "mode": "fixed", "fixedColor": "purple" } } },
      "options": { "colorMode": "value", "graphMode": "area" }
    },
    {
      "id": 7,
      "type": "stat",
      "title": "Bandwidth In",
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 1 },
      "targets": [
        { "expr": "sum(rate(node_network_receive_bytes_total{device!~\"lo|veth.*|cali.*|flannel.*\"}[5m]))", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "Bps", "color": { "mode": "fixed", "fixedColor": "green" } } },
      "options": { "colorMode": "value", "graphMode": "area" }
    },
    {
      "id": 8,
      "type": "row",
      "title": "ðŸ“ˆ REQUEST PATTERNS",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "collapsed": false
    },
    {
      "id": 9,
      "type": "timeseries",
      "title": "Requests by Status Code",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "targets": [
        { "expr": "sum by(code) (rate(traefik_entrypoint_requests_total[5m]))", "legendFormat": "{{code}}", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps", "custom": { "drawStyle": "line", "fillOpacity": 20, "lineWidth": 2, "stacking": { "mode": "normal" } } },
        "overrides": [
          { "matcher": { "id": "byRegexp", "options": "/^2..$/" }, "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }] },
          { "matcher": { "id": "byRegexp", "options": "/^3..$/" }, "properties": [{ "id": "color", "value": { "fixedColor": "blue", "mode": "fixed" } }] },
          { "matcher": { "id": "byRegexp", "options": "/^4..$/" }, "properties": [{ "id": "color", "value": { "fixedColor": "yellow", "mode": "fixed" } }] },
          { "matcher": { "id": "byRegexp", "options": "/^5..$/" }, "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }] }
        ]
      },
      "options": { "legend": { "displayMode": "table", "placement": "right", "calcs": ["sum", "mean"] } }
    },
    {
      "id": 10,
      "type": "timeseries",
      "title": "Requests by Entrypoint",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "targets": [
        { "expr": "sum by(entrypoint) (rate(traefik_entrypoint_requests_total[5m]))", "legendFormat": "{{entrypoint}}", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps", "custom": { "drawStyle": "line", "fillOpacity": 30, "lineWidth": 2 } }
      },
      "options": { "legend": { "displayMode": "table", "placement": "right", "calcs": ["sum", "mean"] } }
    },
    {
      "id": 11,
      "type": "row",
      "title": "ðŸŽ¯ SERVICE METRICS",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
      "collapsed": false
    },
    {
      "id": 12,
      "type": "bargauge",
      "title": "Top 10 Services by Request Rate",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 15 },
      "targets": [
        { "expr": "topk(10, sum by(service) (rate(traefik_service_requests_total[5m])))", "legendFormat": "{{service}}", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps", "color": { "mode": "palette-classic" } } },
      "options": { "displayMode": "gradient", "orientation": "horizontal", "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "id": 13,
      "type": "timeseries",
      "title": "Service Response Time (p95)",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 15 },
      "targets": [
        { "expr": "histogram_quantile(0.95, sum by(service, le) (rate(traefik_service_request_duration_seconds_bucket[5m])))", "legendFormat": "{{service}}", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s", "decimals": 3,
          "custom": { "drawStyle": "line", "fillOpacity": 10, "lineWidth": 2 },
          "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 0.5 }, { "color": "red", "value": 1 }] }
        }
      },
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } }
    },
    {
      "id": 14,
      "type": "piechart",
      "title": "Traffic Distribution",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 15 },
      "targets": [
        { "expr": "sum by(service) (increase(traefik_service_requests_total[1h]))", "legendFormat": "{{service}}", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "color": { "mode": "palette-classic" } } },
      "options": {
        "legend": { "displayMode": "table", "placement": "right", "values": ["percent"] },
        "pieType": "donut",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "id": 15,
      "type": "row",
      "title": "ðŸ”Œ NODE NETWORK",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 23 },
      "collapsed": false
    },
    {
      "id": 16,
      "type": "timeseries",
      "title": "Network Receive by Node",
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 24 },
      "targets": [
        { "expr": "sum by(instance) (rate(node_network_receive_bytes_total{device!~\"lo|veth.*|cali.*|flannel.*\"}[5m]))", "legendFormat": "{{instance}}", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "Bps", "custom": { "drawStyle": "line", "fillOpacity": 30, "lineWidth": 2 } } },
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } }
    },
    {
      "id": 17,
      "type": "timeseries",
      "title": "Network Transmit by Node",
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 24 },
      "targets": [
        { "expr": "sum by(instance) (rate(node_network_transmit_bytes_total{device!~\"lo|veth.*|cali.*|flannel.*\"}[5m]))", "legendFormat": "{{instance}}", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "Bps", "custom": { "drawStyle": "line", "fillOpacity": 30, "lineWidth": 2 } } },
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } }
    },
    {
      "id": 18,
      "type": "row",
      "title": "ðŸ“¡ CONNECTION STATES",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 30 },
      "collapsed": false
    },
    {
      "id": 19,
      "type": "timeseries",
      "title": "TCP Connections Established",
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 31 },
      "targets": [
        { "expr": "sum by(instance) (node_netstat_Tcp_CurrEstab)", "legendFormat": "{{instance}}", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "custom": { "drawStyle": "line", "fillOpacity": 20 } } },
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } }
    },
    {
      "id": 20,
      "type": "timeseries",
      "title": "TCP Retransmits",
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 31 },
      "targets": [
        { "expr": "sum by(instance) (rate(node_netstat_Tcp_RetransSegs[5m]))", "legendFormat": "{{instance}}", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "pps",
          "custom": { "drawStyle": "line", "fillOpacity": 20 },
          "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 10 }, { "color": "red", "value": 100 }] }
        }
      },
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } }
    },
    {
      "id": 21,
      "type": "timeseries",
      "title": "Network Errors",
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 31 },
      "targets": [
        { "expr": "sum by(instance) (rate(node_network_receive_errs_total[5m]))", "legendFormat": "{{instance}} RX Errors", "refId": "A" },
        { "expr": "sum by(instance) (rate(node_network_transmit_errs_total[5m]))", "legendFormat": "{{instance}} TX Errors", "refId": "B" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "pps",
          "custom": { "drawStyle": "line", "fillOpacity": 20 },
          "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "red", "value": 1 }] }
        }
      },
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } }
    }
  ]
}
